{
  "name": "{#PACKAGE_NAME#}",
  "version": "0.0.1",
  "description": "{#PACKAGE_DESCRIPTION#}",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "init": "node init.js",
    "postinit-tpl": "pnpm remove inquirer",
    "build": "rollup --config rollup.config.mjs",
    "prebuild": "del-cli dist",
    "postbuild": "del-cli dist/**/__specs__",
    "test": "vitest run",
    "test-with-watch-mode": "vitest",
    "test-with-coverage": "vitest run --coverage && istanbul-badges-readme && prettier \"./README.md\" --check --write",
    "lint": "eslint \"./src/**/**.ts\" --cache --cache-location ./.cache/eslint/src",
    "lint-with-autofix": "pnpm run lint --fix",
    "format": "prettier \"./src/**/*.ts\" --write --check",
    "local-pr-ready-check": "pnpm run format && pnpm run lint-with-autofix && pnpm run test",
    "ci-test": "pnpm run lint && pnpm run test"
  },
  "keywords": [],
  "author": "{#PACKAGE_AUTHOR_NAME#} <{#PACKAGE_AUTHOR_EMAIL#}>",
  "license": "BSD 3-Clause License",
  "bugs": {
    "url": "https://github.com/{#REPO_OWNER#}/{#REPO_NAME#}/issues"
  },
  "homepage": "https://github.com/{#REPO_OWNER#}/{#REPO_NAME#}#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{#REPO_OWNER#}/{#REPO_NAME#}.git"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@vitest/coverage-istanbul": "^0.34.1",
    "@wezom/eslint-config": "^11.0.5",
    "@wezom/eslint-config-ts": "^11.0.5",
    "cp-cli": "^2.0.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "glob": "^10.3.3",
    "inquirer": "^8.2.6",
    "istanbul-badges-readme": "^1.8.5",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.0",
    "rollup": "^3.27.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  }
}
